<%- include("partials/header") %>

<div class="container">
    <h1>Add New Comment</h1>
    <form action="/movies/<%= movie_id %> /comments" method="post">
        <div class="form-group">
            <label for="text">Comment Text</label>
            <textarea name="text" id="text" class="form-control" rows="8" cols="80" placeholder="Comment text here..." required></textarea>
        </div>
        <input type="hidden" name="movieId" value="<%= movie_id %>">
        <button type="submit" class="btn btn-primary"> Submit Comment</button>
    </form>
</div>

<%- include("partials/footer") %>
